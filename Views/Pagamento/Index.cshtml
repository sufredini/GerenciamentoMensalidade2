@model IEnumerable<GerenciamentoMensalidade2.Models.Pagamento>

@{
    ViewData["Title"] = "Pagamentos";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de adicionar -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-lg btn-success">
            <i class="bi bi-plus-circle me-1"></i> Novo Pagamento
        </a>
    </div>

    <!-- Card da tabela -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-0">
            <div class="d-flex justify-content-end">
                <input type="text"
                       class="form-control form-control-sm w-25"
                       placeholder="🔍 Buscar..." />
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Alunos)</th>
                            <th>@Html.DisplayNameFor(m => m.DtPagamento)</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">
                                    Nenhum pagamento registrado.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Alunos.AlunosId</td>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.DtPagamento)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.PagamentoId"
                                           class="btn btn-outline-primary btn-sm me-1"
                                           data-bs-toggle="tooltip"
                                           title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details"
                                           asp-route-id="@item.PagamentoId"
                                           class="btn btn-outline-info btn-sm me-1"
                                           data-bs-toggle="tooltip"
                                           title="Detalhes">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.PagamentoId"
                                           class="btn btn-outline-danger btn-sm"
                                           data-bs-toggle="tooltip"
                                           title="Deletar">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializa tooltips do Bootstrap
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(
                document.querySelectorAll('[data-bs-toggle="tooltip"]')
            );
            tooltipTriggerList.forEach(function (el) {
                new bootstrap.Tooltip(el);
            });
        });
    </script>
}
