<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – GerenciamentoMensalidade2</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Seus estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciamentoMensalidade2.styles.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background: linear-gradient(90deg, #198754 0%, #20c997 100%) !important;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link,
            .navbar-custom .navbar-toggler {
                color: #fff !important;
            }

                .navbar-custom .nav-link.active,
                .navbar-custom .nav-link:focus,
                .navbar-custom .nav-link:hover {
                    color: #f8f9fa !important;
                    background: rgba(255,255,255,0.08);
                    border-radius: .5rem;
                }

            .navbar-custom .navbar-brand {
                font-size: 1.5rem;
                letter-spacing: 1px;
            }

            .navbar-custom .navbar-toggler {
                border: none;
            }

                .navbar-custom .navbar-toggler:focus {
                    box-shadow: none;
                }

        .footer-custom {
            background: linear-gradient(90deg, #198754 0%, #20c997 100%);
            color: #fff;
        }

            .footer-custom a {
                color: #fff;
                opacity: 0.85;
            }

                .footer-custom a:hover {
                    opacity: 1;
                    text-decoration: underline;
                }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i>Gerenciamento
                </a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="Home")?"active":"")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i>Início
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="Alunos")?"active":"")"
                               asp-controller="Alunos" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i>Alunos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="Pagamento")?"active":"")"
                               asp-controller="Pagamento" asp-action="Index">
                                <i class="bi bi-cash-stack me-1"></i>Pagamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="Plano")?"active":"")"
                               asp-controller="Plano" asp-action="Index">
                                <i class="bi bi-list-task me-1"></i>Planos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="Administrador")?"active":"")"
                               asp-controller="Administrador" asp-action="Index">
                                <i class="bi bi-person-badge-fill me-1"></i>Admin
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()=="RegistroEntradaSaida")?"active":"")"
                               asp-controller="RegistroEntradaSaida" asp-action="Index">
                                <i class="bi bi-clock-history me-1"></i>Registros
                            </a>
                        </li>
                    </ul>
                    <!-- Login / Usuário -->
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-fill py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer-custom py-3 mt-auto">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <small>© 2025 GerenciamentoMensalidade2</small>
            <ul class="list-inline mb-0">
                <li class="list-inline-item">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy"
                       class="text-decoration-none">Privacidade</a>
                </li>
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">Suporte</a>
                </li>
                <li class="list-inline-item">
                    <a href="#" class="text-decoration-none">Contato</a>
                </li>
            </ul>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
