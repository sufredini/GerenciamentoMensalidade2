@model GerenciamentoMensalidade2.Models.Administrador

@{
    ViewData["Title"] = "Criar Administrador";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <!-- Card Header -->
                <div class="card-header bg-light">
                    <h5 class="mb-0">Dados do Administrador</h5>
                </div>

                <!-- Card Body / Formulário -->
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control form-control-lg" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cpf" class="form-label"></label>
                            <input asp-for="Cpf" class="form-control form-control-lg" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Senha" class="form-label"></label>
                            <input asp-for="Senha" type="password" class="form-control form-control-lg" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <!-- Card Footer com botões -->
                        <div class="card-footer bg-white text-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Criar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
