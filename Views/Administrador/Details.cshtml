@model GerenciamentoMensalidade2.Models.Administrador

@{
    ViewData["Title"] = "Detalhes do Administrador";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <!-- Card Header -->
                <div class="card-header bg-light">
                    <h5 class="mb-0">Informações do Administrador</h5>
                </div>

                <!-- Card Body com detalhes -->
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Nome</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">CPF</dt>
                        <dd class="col-sm-8">@Model.Cpf</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Senha</dt>
                        <dd class="col-sm-8">@Model.Senha</dd>
                    </dl>
                </div>

                <!-- Card Footer com botões -->
                <div class="card-footer bg-white text-end">
                    <a asp-action="Edit"
                       asp-route-id="@Model.AdministradorId"
                       class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-pencil-square me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-1"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
