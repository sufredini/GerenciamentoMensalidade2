@model GerenciamentoMensalidade2.Models.Plano

@{
    ViewData["Title"] = "Detalhes do Plano";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <!-- Cabeçalho do card -->
                <div class="card-header bg-light">
                    <h5 class="mb-0">Informações do Plano</h5>
                </div>

                <!-- Corpo do card com detalhes -->
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DiasPorSemana)</dt>
                        <dd class="col-sm-8">@Model.DiasPorSemana</dd>
                    </dl>
                </div>

                <!-- Rodapé do card com botões -->
                <div class="card-footer bg-white text-end">
                    <a asp-action="Edit"
                       asp-route-id="@Model.PlanoId"
                       class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-pencil-square me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-1"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
