@model IEnumerable<GerenciamentoMensalidade2.Models.Plano>

@{
    ViewData["Title"] = "Index";
}

<h1>Plano</h1>

<p>
    <a asp-action="Create">Criar Plano</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasPorSemana)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasPorSemana)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlanoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PlanoId">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.PlanoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
