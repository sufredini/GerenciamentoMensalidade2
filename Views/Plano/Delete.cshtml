@model GerenciamentoMensalidade2.Models.Plano

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <!-- Cabeçalho do Card -->
                <div class="card-header bg-light">
                    <h5 class="mb-0">Plano Selecionado</h5>
                </div>

                <!-- Corpo do Card com detalhes -->
                <div class="card-body">
                    <p class="mb-4">Tem certeza que deseja excluir este plano?</p>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Nome)</dt>
                        <dd class="col-sm-8">@Model.Nome</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DiasPorSemana)</dt>
                        <dd class="col-sm-8">@Model.DiasPorSemana</dd>
                    </dl>
                </div>

                <!-- Rodapé do Card com botões -->
                <div class="card-footer bg-white text-end">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="PlanoId" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                            <i class="bi bi-x-circle me-1"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash-fill me-1"></i> Deletar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
