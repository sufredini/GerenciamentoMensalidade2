@model GerenciamentoMensalidade2.Models.Plano

@{
    ViewData["Title"] = "Editar Plano";
}

<div class="container mt-4">
    <!-- Cabeçalho com título e botão de voltar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left me-1"></i> Voltar
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <!-- Cabeçalho do card -->
                <div class="card-header bg-light">
                    <h5 class="mb-0">Dados do Plano</h5>
                </div>

                <!-- Corpo do card / formulário -->
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="PlanoId" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control form-control-lg" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DiasPorSemana" class="form-label"></label>
                            <input asp-for="DiasPorSemana"
                                   type="number"
                                   class="form-control form-control-lg" />
                            <span asp-validation-for="DiasPorSemana" class="text-danger"></span>
                        </div>

                        <!-- Rodapé do card com botões -->
                        <div class="card-footer bg-white text-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save me-1"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
